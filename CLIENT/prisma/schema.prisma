// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Video {
  video_id    String        @id
  file_dir    String[]
  file_path   String
  file_name   String
  file_type   String
  info        Info?
  thumbnails  Thumbnail[]
  downloadStatus DownloadStatus?
}

model Info {
  info_id           Int     @id @default(autoincrement())
  video_id          String  @unique
  video_title       String?
  video_description String?
  video             Video   @relation(fields: [video_id], references: [video_id])

  @@map("info")
}

model Thumbnail {
  thumbnail_id   Int    @id @default(autoincrement())
  video_id       String
  thumb_num      Int
  file_dir       String[]
  file_path      String
  file_name      String
  file_type      String
  video          Video  @relation(fields: [video_id], references: [video_id])
}

model DownloadStatus {
  video_id                 String @id
  video_download_status    String
  thumbnail_download_status String
  video                    Video  @relation(fields: [video_id], references: [video_id])
}