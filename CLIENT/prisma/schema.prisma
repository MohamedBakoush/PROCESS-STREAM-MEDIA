generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model info {
  info_id            String    @id @default(uuid()) // Assuming UUIDs for info_id
  supabase_user_id   String
  public             Boolean   @default(true)
  video_name         String?
  video_description  String?
  videos             videos[]
}

model videos {
  video_id     String     @id
  info_id      String
  file_dir     String[]
  file_path    String
  file_name    String
  file_type    String
  info         info         @relation(fields: [info_id], references: [info_id])
  thumbnails   thumbnails[]
}

model thumbnails {
  thumbnail_id  Int     @id @default(autoincrement())
  video_id      String
  thumb_num     Int?
  file_dir      String[]
  file_path     String
  file_name     String
  file_type     String
  videos        videos   @relation(fields: [video_id], references: [video_id])
}